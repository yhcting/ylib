{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build: src",
            "type": "shell",
            "command": "make",
            "args": ["-j", "install"],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": ["relative", "${workspaceFolder}/src"]
            },
            "group": "build"
        },
        {
            "label": "Build: tests",
            "type": "shell",
            "command": "make",
            "args": ["-j", "install"],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": ["relative", "${workspaceFolder}/tests"]
            },
            "group": "build"
        }
    ]
}
