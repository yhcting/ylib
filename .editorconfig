# Editor configuration, see http://editorconfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
tab_width = 8
indent_style = space
indent_size = 4

[{*.c,*.h}]
indent_style = tab

[*.mk]
indent_style = tab

[*.md]
max_line_length = off
trim_trailing_whitespace = false
